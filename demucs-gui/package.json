{
  "name": "stemify-desktop",
  "version": "1.0.0",
  "description": "Stemify - The Audio Splitter (Desktop App)",
  "author": "huchukato",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "vite build",
    "electron-build": "npm run build && electron-builder",
    "electron-build-prod": "NODE_ENV=production npm run build && electron-builder",
    "sign-mac": "find dist-electron -name '*.app' -exec ../sign_mac_app.sh {} \\;",
    "build-and-sign": "npm run electron-build-prod && npm run sign-mac",
    "start": "npm run dev"
  },
  "build": {
    "appId": "com.stemify.app",
    "productName": "Stemify",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "loading.html",
      "public/logo.png",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32", "arm64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        }
      ]
    }
  },
  "devDependencies": {
    "autoprefixer": "^10.4.24",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^5.1.3",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
